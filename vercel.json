{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "installCommand": "cd client && npm install",
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.ts" },
    { "src": "/(.*)", "dest": "/server/index.ts" }
  ]
}
